/* pages/user/user.wxss */
.cards {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
}

.card-progress {
  box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1); /* Subtle shadow */  margin-top: 15rpx;
  margin: 15rpx 20rpx;
  border-radius: 4rpx;
  border-left:18rpx solid #FFBE04;
  background-color: white;
  position: relative;
}

.card-content {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #665D55;
}
.card-content image{
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
  margin-right: 50rpx;
}
.card-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: flex-start;  
}

.in-progress {
  color: #22CC77
}

.completed {
  color: #3399DD;
}
.card-info .status{
  font-size: 25rpx;
}

.card-info .title {
  font-size: 40rpx;
}
.delete-button {
  position: absolute;
  top:5rpx;
  right:5rpx;
  width: 30rpx !important;
  height: 30rpx !important;
  padding: 10px;
}

page {
  background-color: #EDE8E5;
}