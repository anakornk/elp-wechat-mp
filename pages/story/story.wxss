.card{
  display:flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: center;
  height: auto;
}


page {
  background-color: #E6E5E8;
}

video {
  width: 100%;
}
 .cardContent{
  margin-left: 30rpx;
  margin-right: 30rpx; 
  text-align:justify;
  /* border-left:18rpx solid #FFBE04;
  border-right:18rpx solid #FFBE04; */
} 

 .story_content {
  color: #1E3D2C;
  background-color: white;
  font-size: 35rpx;
  /* margin-bottom: 30rpx; */
  /* border: 2px solid #1E3D2C;
  border-radius: 5px; */
  /* padding: 10px 15px; */
  margin: 10px;
  border-radius: 4px;
  /* border: 2px solid rgb(204, 204, 204); */
  position: relative;
  flex-direction: column;
} 

.story_content .story-image {
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  margin-bottom: 5px;
  /* max-width: 100%; */
  /* height: auto; */
  /* object-fit: contain; */
  width: 100%;
}

.story_content .story-video {
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  margin-bottom: 5px;
}
.story_content .text-content {
  padding: 10px;
  text-indent: 25px;
}
.question-content{
  color: #1E3D2C;
  font-weight: 1000;
  font-family:  'Avenir';
  margin: 10px;
  /* border: 2px solid black;
  border-radius: 5px; */
  text-align: center;
  text-transform: capitalize;
}

.button_image{
  width: 40rpx;
  height: 40rpx;
  justify-content: center;
  position: absolute;
  bottom: 5px;
  right: 5px;
}

 .story-container{
  flex-direction: column;
} 

 .button-container{
  display: flex;
  justify-content: space-around;
} 

button {
width: 160px;
position:relative;
display: inline-block;
margin-left:auto;
margin-right:auto;
padding:0px 25px;
box-sizing:border-box;
font-size:14px;
text-align: center;
text-decoration:none;
line-height:2.55555556;
border-radius:5px;
-webkit-tap-highlight-color:transparent;
overflow:hidden;
color: white;
background-color:#1E3D2C;
}

