.card {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: center;
  height: auto;
}

page {
  background-color: white;
}

image {
  width: 100%;
}

video {
  width: 100%;
}

.cardContent {
  margin-left: 30rpx;
  margin-right: 30rpx;
  text-align: justify;
  /* border-left:18rpx solid #FFBE04;
  border-right:18rpx solid #FFBE04; */
}

.story_content {
  color: #665D55;
  background-color: white;
  font-size: 35rpx;
  margin: 10px;
  border-radius: 8rpx;
  /* border: 2px solid rgb(204, 204, 204);  */
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.story_content .story-image {
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  /* max-width: 100%; *//* height: auto; *//* object-fit: contain; */
  width: 100%;
}

.story_content .story-video {
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
}

.text-content {
  padding: 10px;
  font-size: 15px;
  text-align: inherit;
  color: #665D55;
  /* text-indent: 15rpx; */
  border-left: 1px solid rgb(204, 204, 204);  
  border-right: 1px solid rgb(204, 204, 204);  
  border-bottom: 1px solid rgb(204, 204, 204);  
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;

}

.question-content {
  /* border: 2px solid black; */
  border-radius: 7px;
  padding: 2px;
  color: #665D55;
  font-weight: bolder;
  margin: 10px;
  text-align: center;
  text-transform: capitalize;
  font-family: ".PingFangSC-Regular";
}

.button_image {
  width: 40rpx;
  height: 40rpx;
  justify-content: center;
  position: absolute;
  bottom: 5px;
  right: 5px;
}

.story-container {
  flex-direction: column;
}

.button-container {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.elephant-animation {
  width: 150px;
  height: 145px;
  position: absolute;
  display: flex;
  text-align: center;
  left: 263rpx;
  justify-content: center;
  bottom: 53rpx;
  align-items: center;
}

button {
  width: 160px;
  position: relative;
  display: inline-block;
  margin-left: auto;
  margin-right: auto;
  padding: 0px 25px;
  box-sizing: border-box;
  font-size: 14px;
  font-family: "SimSun";
  font-weight: bolder;
  text-align: center;
  text-decoration: none;
  line-height: 2.55555556;
  /* border-radius: 20px; */
  border-radius: 10rpx;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: white;
  background-color: #665D55;
}

.ending {
  font-weight: bold;
  font-size: 40px;
  color: #665D55;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.ending button{
  margin-top: 10rpx;
}

.wx-video-cover {
  border-radius: 10px;
}

.error-msg-wrapper{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  height: 100vh;
}

.error-msg {
  text-align: center;
}
