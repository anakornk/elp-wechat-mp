<view class="story-container">
  <view class="card">
    <image src="{{'http://localhost:3000' + textdata.img_url}}" mode="widthFix">
    </image>
  </view>

    <view class="cardContent">
      <view>
        <text class="story_content">{{textdata.content}}</text>
      </view>
      <view>
        <text class="question-content">{{textdata.question}}</text>
      </view>
      <view class="cardFooter">
        <image class="button_image" image src="/photos/play-button.png" bindtap="listenerButtonPlay"></image>
      </view>
    </view>


    <view class="button-container">
      <view wx:if="{{isLastPage}}">The End</view>
      <view wx:for="{{textdata.links}}" wx:for-item="res" wx:if="{{res.nextPageId != null}}">
        <button data-nextpageid="{{res.nextPageId}}" bindtap="A">{{res.choice_text}}</button>
      </view>
    </view>
</view>